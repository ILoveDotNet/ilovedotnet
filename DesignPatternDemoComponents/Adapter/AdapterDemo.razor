<div>
    <button type="button"
        class="[ bg-cyan-500 ] [ text-white ] [ px-4 py-2 ] [ inline-block ] [ rounded-md ] [ inline-flex ] [ space-x-1 ]"
        @onclick="HandleBlazorUserAdapter">
        Show Blazor Adapter Details
    </button>

    <button type="button"
        class="[ bg-cyan-500 ] [ text-white ] [ px-4 py-2 ] [ inline-block ] [ rounded-md ] [ inline-flex ] [ space-x-1 ]"
        @onclick="HandleMAUIUserAdapter">
        Show MAUI Adapter Details
    </button>

    @if (showAdapter1Details)
    {
        <div>
            <h4 class="text-lg font-semibold">Adapter 1 (Blazor)</h4>
            <div>
                <p><strong>User ID:</strong> @_blazorAdapter.GetCurrentUserId()</p>
                <p><strong>Role:</strong> @_blazorAdapter.GetCurrentUserRole()</p>
            </div>
        </div>
    }

    @if (showAdapter2Details)
    {
        <div>
            <h4 class="text-lg font-semibold">Adapter 2 (MAUI)</h4>
            <div>
                <p><strong>User ID:</strong> @_mauiAdapter.GetCurrentUserId()</p>
                <p><strong>Role:</strong> @_mauiAdapter.GetCurrentUserRole()</p>
            </div>
        </div>
    }
</div>

@code {
    private readonly IUserContextAdapter _blazorAdapter = new BlazorUserContextAdapter();
    private readonly IUserContextAdapter _mauiAdapter = new MAUIContextAdapter();
    private bool showAdapter1Details = false;
    private bool showAdapter2Details = false;

    private void HandleBlazorUserAdapter()
    {
        showAdapter1Details = !showAdapter1Details;
    }

    private void HandleMAUIUserAdapter()
    {
        showAdapter2Details = !showAdapter2Details;
    }
}