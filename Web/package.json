{
  "name": "ilovedotnet",
  "version": "1.0.0",
  "description": "configuration to build and purge css",
  "scripts": {
    "buildbulma": "node-sass --omit-source-map-url wwwroot/css/app.css wwwroot/css/app.min.css",
    "buildcss:dev": "npx tailwindcss -i wwwroot/css/app.min.css -o wwwroot/css/app.min.css --watch",
    "purgecss": "purgecss --config ./purgecss.config.js",
    "buildcss:prod": "npx tailwindcss -i wwwroot/css/app.min.css -o wwwroot/css/app.min.css --minify",
    "buildcss": "npm run buildcss:prod && npm run purgecss"
  },
  "author": "Abdul Rahman",
  "license": "CC0-1.0 License",
  "dependencies": {
    "@iconfu/svg-inject": "^1.2.3",
    "autoprefixer": "^10.4.0",
    "bulma": "^0.9.3",
    "node-sass": "^7.0.1",
    "purgecss": "^4.1.3",
    "tailwindcss": "^3.0.2"
  }
}
