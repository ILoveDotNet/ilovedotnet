@inject TableOfContents tableOfContents

<aside class="[ flex flex-col md:basis-1/5 ] [ space-y-2 ]">
    @foreach (var content in tableOfContents.Contents.Where(content => !content.Title.Equals(Title, StringComparison.OrdinalIgnoreCase)))
    {
        <Thumbnail PosterUrl="@content.PosterUrl"
               ContentUrl="@content.ContentUrl"
               Title="@content.Title"
               AltText="@content.Title"
               IconUrl="@content.IconUrl"
               IconAlt="@content.Type"
               CreatedOn="@content.CreatedOn"
               Author="@content.Author"
               Swap=true>
        </Thumbnail>
    }
</aside>

@code {
    [Parameter, EditorRequired] public string Title { get; set; } = default!;
}
