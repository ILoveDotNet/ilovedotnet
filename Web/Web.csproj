<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<!--<ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>-->
		<PublishTrimmed>true</PublishTrimmed>
		<BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>
		<BlazorWebAssemblyLoadAllGlobalizationData>false</BlazorWebAssemblyLoadAllGlobalizationData>
		<BlazorWebAssemblyPreserveCollationData>false</BlazorWebAssemblyPreserveCollationData>
		<BlazorWasmPrerenderingDeleteLoadingContents>true</BlazorWasmPrerenderingDeleteLoadingContents>
		<!-- <BlazorWasmPrerenderingEnvironment>Production</BlazorWasmPrerenderingEnvironment> -->
		<BlazorWasmPrerenderingMode>WebAssemblyPrerendered</BlazorWasmPrerenderingMode>
		<GHPagesBase>/</GHPagesBase>
		<RenameDllsTo>dat</RenameDllsTo>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Blazor-Analytics" Version="3.11.0" />
		<PackageReference Include="BlazorWasmAntivirusProtection" Version="2.4.5" />
		<PackageReference Include="BlazorWasmPreRendering.Build" Version="2.0.0-preview.9" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.5" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.5" PrivateAssets="all" />
		<PackageReference Include="PublishSPAforGitHubPages.Build" Version="2.0.2" />
		<PackageReference Include="Toolbelt.Blazor.HeadElement" Version="7.3.1" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\BlazorDemoComponents\BlazorDemoComponents.csproj" />
	  <ProjectReference Include="..\Components\Components.csproj" />
	  <ProjectReference Include="..\DependencyInjectionDemoComponents\DependencyInjectionDemoComponents.csproj" />
	  <ProjectReference Include="..\DesignPatternDemoComponents\DesignPatternDemoComponents.csproj" />
	  <ProjectReference Include="..\LINQDemoComponents\LINQDemoComponents.csproj" />
	  <ProjectReference Include="..\OOPSDemoComponents\OOPSDemoComponents.csproj" />
	  <ProjectReference Include="..\ReportDemoComponents\ReportDemoComponents.csproj" />
	  <ProjectReference Include="..\SharedComponents\SharedComponents.csproj" />
	</ItemGroup>

	<!--<ItemGroup>
		<ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
	</ItemGroup>-->

	<ItemGroup>
		<BlazorWebAssemblyLazyLoad Include="BlazorDemoComponents.dll" />
		<BlazorWebAssemblyLazyLoad Include="Components.dll" />
		<BlazorWebAssemblyLazyLoad Include="DependencyInjectionDemoComponents.dll" />
		<BlazorWebAssemblyLazyLoad Include="DesignPatternDemoComponents.dll" />
		<BlazorWebAssemblyLazyLoad Include="LINQDemoComponents.dll" />
		<BlazorWebAssemblyLazyLoad Include="OOPSDemoComponents.dll" />
		<BlazorWebAssemblyLazyLoad Include="ReportDemoComponents.dll" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)'=='Release'">
		<Content Remove="wwwroot\appsettings.Development.json" />
		<None Include="wwwroot\appsettings.Development.json" />
		<Content Remove="wwwroot\css\app.css" />
		<None Include="wwwroot\css\app.css" />
	</ItemGroup>

	<Target Name="BuildCSS" BeforeTargets="Compile" Condition="'$(Configuration)'=='Release'">
		<Exec EnvironmentVariables="NODE_ENV=production" Command="npm run buildcss" />
	</Target>

</Project>
