        var result = await Client.GetJsonResultAsync&lt;List&lt;WeatherForecast&gt;&gt;("/weatherforecast", HttpStatusCode.OK, outputHelper);
        result.Count.Should().Be(5);
    }
}
</CodeSnippet>

