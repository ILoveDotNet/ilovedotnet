<section class="[ flex flex-row ] [ space-x-1 ]">
    <table class="[ table-fixed border-collapse ] [ bg-white ] [ border-2 ] [ dark:bg-black dark:border-slate-500 ] [ mt-2 ] [ w-full ]">
        <thead>
            <tr class="[ bg-gray-100 ] [ dark:bg-slate-500 ]">
                <th colspan="2" class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Products</th>
            </tr>
            <tr class="[ bg-gray-100 ] [ dark:bg-slate-500 ]">
                <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Id</th>
                <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@product.Id</td>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@product.Name</td>
                </tr>
            }
        </tbody>
    </table>
    <table class="[ table-fixed border-collapse ] [ bg-white ] [ border-2 ] [ dark:bg-black dark:border-slate-500 ] [ mt-2 ] [ w-full ]">
        <thead>
            <tr class="[ bg-gray-100 ] [ dark:bg-slate-500 ]">
                <th colspan="4" class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Sales</th>
            </tr>
            <tr class="[ bg-gray-100 ] [ dark:bg-slate-500 ]">
                <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Sale Id</th>
                <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Product Id</th>
                <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Price</th>
                <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Color</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sale in sales)
            {
                <tr>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@sale.Id</td>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@sale.ProductId</td>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@sale.Price</td>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@sale.ProductColor</td>
                </tr>
            }
        </tbody>
    </table>
</section>

<table class="[ table-fixed border-collapse ] [ bg-white ] [ border-2 ] [ dark:bg-black dark:border-slate-500 ] [ mt-2 ] [ w-full ]">
    <thead>
        <tr class="[ bg-gray-100 ] [ dark:bg-slate-500 ]">
            <th rowspan="2" class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Product Details</th>
            <th colspan="3" class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Sale Details</th>
        </tr>
        <tr class="[ bg-gray-100 ] [ dark:bg-slate-500 ]">
            <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Sale Id</th>
            <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Price</th>
            <th class="[ border-2 ] [ dark:border-slate-600 ] [ p-2 ]">Color</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productSale in result)
        {
            @foreach ((int index, Sale sale) in productSale.Sales.Select((sale, index) => (index, sale)))
            {
                <tr>
                    @if (index == 0)
                    {
                        <td rowspan="@productSale.Sales.Count" class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">
                            <p>ID - @productSale.Product.Id</p>
                            <p>Name - @productSale.Product.Name</p>
                        </td>                        
                    }
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@sale.Id</td>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@sale.Price</td>
                    <td class="[ border-2 ] [ dark:border-slate-700 ] [ p-2 ]">@sale.ProductColor</td>
                </tr>
            }
        }
    </tbody>
</table>

<button type="button" class="[ bg-cyan-500 ] [ text-white ] [ px-4 py-2 ] [ inline-block ] [ rounded-md ] [ inline-flex ] [ space-x-1 ]" @onclick="HandleGroupJoin">
    GroupJoin
</button>

<button type="button" class="[ bg-fuchsia-500 ] [ text-white ] [ px-4 py-2 ] [ inline-block ] [ rounded-md ] [ inline-flex ] [ space-x-1 ]" @onclick="Reset">
    Reset
</button>

@code
{
    private IEnumerable<Product> products = new ProductSource().Products;
    private IEnumerable<Sale> sales = new SaleSource().Sales;
    private IEnumerable<ProductSales> result = Enumerable.Empty<ProductSales>();

    private void HandleGroupJoin()
    {
        result = products.GroupJoin(sales, 
                                    product => product.Id, 
                                    sale => sale.ProductId,
                                    (product, productSales) => new ProductSales
                                    {
                                        Product = product,
                                        Sales = productSales.ToList()
                                    })
                         .ToList();
    }

    private void Reset()
    {
        products = new ProductSource().Products;
        sales = new SaleSource().Sales;
        result = Enumerable.Empty<ProductSales>();
    }
}