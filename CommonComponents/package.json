{
  "name": "ilovedotnet",
  "version": "1.0.0",
  "description": "configuration to build and purge css",
  "scripts": {
    "buildbulma": "sass --no-source-map Styles/bulma-input.scss Styles/bulma-output.css",
    "buildtailwind": "npx @tailwindcss/cli -i Styles/tailwind-input.css -o Styles/tailwind-output.css --minify",
    "combine-css": "concat Styles/bulma-output.css Styles/tailwind-output.css Styles/ilovedotnet.css -o wwwroot/css/app.css",
    "combine-min-css": "concat Styles/bulma-output.css Styles/tailwind-output.css Styles/ilovedotnet.css -o wwwroot/css/app.min.css",
    "purgecss": "purgecss --config ./purgecss.config.js",
    "buildcss": "npm run buildbulma && npm run buildtailwind && npm run combine-css && npm run combine-min-css"
  },
  "author": "Abdul Rahman",
  "license": "CC0-1.0 License",
  "dependencies": {
    "@tailwindcss/cli": "4.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "bulma": "1.0.3",
    "charts.css": "^1.1.0",
    "purgecss": "7.0.2",
    "sass": "1.83.4",
    "semver": "7.6.3"
  },
  "devDependencies": {
    "concat-cli": "^4.0.0"
  }
}
