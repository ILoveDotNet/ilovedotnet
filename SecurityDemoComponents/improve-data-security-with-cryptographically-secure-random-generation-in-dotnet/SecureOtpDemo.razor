@using System.Security.Cryptography

<button class="[ bg-fuchsia-500 ] [ px-4 py-2 ] [ inline-block ] [ rounded-md ] [ inline-flex ] [ space-x-1 ]" @onclick="GenerateOtp">
    <svg xmlns="http://www.w3.org/2000/svg" class="[ icon icon-tabler icons-tabler-outline icon-tabler-shield-lock ] [ text-white ]" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M12 3a12 12 0 0 0 8.5 3a12 12 0 0 1 -8.5 15a12 12 0 0 1 -8.5 -15a12 12 0 0 0 8.5 -3" />
        <path d="M12 11m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
        <path d="M12 12l0 2.5" />
    </svg>
    <span class="[ text-white ]">Generate Secure OTP</span>
</button>

@if (!string.IsNullOrEmpty(generatedOtp))
{
    <div class="[ mt-4 ]">
        <strong>Generated OTP:</strong> @generatedOtp
    </div>
}

@code {
    private string generatedOtp = string.Empty;

    private void GenerateOtp()
    {
        // Generate a 6-digit secure OTP
        generatedOtp = string.Empty;
        for (int i = 0; i < 6; i++)
        {
            int digit = RandomNumberGenerator.GetInt32(0, 10);
            generatedOtp += digit.ToString();
        }
        StateHasChanged();
    }
}
